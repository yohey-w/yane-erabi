---
import BaseLayout from '../layouts/BaseLayout.astro';
import { getCollection } from 'astro:content';

const areaArticles = await getCollection('area');
const vsArticles = await getCollection('vs');
const rankingArticles = await getCollection('ranking');
const allArticles = [...areaArticles, ...vsArticles, ...rankingArticles]
  .sort((a, b) => (b.data.publishedAt > a.data.publishedAt ? 1 : -1))
  .slice(0, 20);

// Build area data from articles with slug
const areaList = areaArticles
  .filter(a => a.data.area)
  .map(a => ({
    name: a.data.area!,
    href: `/area/${a.id.replace(/\.mdx?$/, '')}/`,
  }))
  .sort((a, b) => a.name.localeCompare(b.name, 'ja'));


const totalPublished = areaArticles.length + vsArticles.length + rankingArticles.length;
const latestPublished = allArticles[0]?.data.publishedAt ?? '';

// Category label helper
function categoryLabel(col: string) {
  const labels: Record<string, string> = {
    area: '地域',
    vs: '比較',
    ranking: 'ランキング',
    review: '口コミ',
  };
  return labels[col] || col;
}
---
<BaseLayout
  title="屋根修理えらび｜信頼できる屋根修理業者が見つかる"
  description="屋根修理・雨漏り修理の費用を比較。信頼できる屋根修理・雨漏り修理業者を厳選してご紹介します。"
>
  <!-- Hero with Search -->
  <div class="hero home-hero">
    <h1>あなたの地域の<br />屋根修理・雨漏り修理</h1>
    <p class="hero-lead">屋根修理・雨漏り修理の費用を比較<br />信頼できる業者を厳選</p>
        <ul class="hero-trust" aria-label="サイトの信頼情報">
      <li>掲載記事 {totalPublished}件</li>
      <li>毎日情報を更新中</li>
      <li>{latestPublished ? `最終更新 ${latestPublished}` : '地域情報を随時更新'}</li>
    </ul>
<div class="search-box">
      <svg class="search-icon" xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><circle cx="11" cy="11" r="8"/><line x1="21" y1="21" x2="16.65" y2="16.65"/></svg>
      <input type="text" id="area-search" placeholder="地域名を入力（例：練馬、所沢、神戸...）" autocomplete="off" />
    </div>
  </div>

  <!-- Area Search Section -->
  <section id="area" class="index-section">
    <h2>地域から屋根修理業者を探す</h2>

    <div id="area-grid" class="area-grid">
      {areaList.map((area) => (
        <a href={area.href} class="area-chip" data-area={area.name}>{area.name}</a>
      ))}
    </div>
    <p id="no-results" class="no-results" style="display:none;">
      該当する地域の記事はまだありません。順次追加していきます。
    </p>

    <div style="text-align: center; margin-top: 1.5rem;">
      <p style="font-size: 0.9rem; color: var(--color-text-light);">
        あなたの地域がまだない場合は、お気軽にお問い合わせください。
      </p>
    </div>
  </section>

  <!-- Articles -->
  <section id="articles" class="articles-section">
    <h2>新着記事</h2>
    <div class="article-grid">
      {allArticles.map((article) => {
        const slug = article.id.replace(/\.mdx?$/, '');
        const thumbPath = `/images/articles/${slug}-thumb.png`;
        return (
          <a href={`/${article.collection}/${slug}/`} class="article-card">
            <img src={thumbPath} alt={article.data.title} class="card-thumb" loading="lazy" />
            <div class="card-body">
              <span class="card-category">{categoryLabel(article.collection)}</span>
              <div class="card-title">{article.data.title}</div>
              <span class="card-date">{article.data.publishedAt} 更新</span>
            </div>
          </a>
        );
      })}
    </div>
  </section>
</BaseLayout>

<style>
  .home-hero {
    position: relative;
    margin: -1rem -1.25rem 2.4rem;
    padding: 3.2rem 1.25rem 2.7rem;
    border-radius: 0 0 30px 30px;
    overflow: hidden;
  }
  .home-hero::before {
    content: '';
    position: absolute;
    top: -5rem;
    right: -2.5rem;
    width: 15rem;
    height: 15rem;
    border-radius: 50%;
    background: rgba(255, 255, 255, 0.16);
    pointer-events: none;
  }
  .home-hero::after {
    content: '';
    position: absolute;
    bottom: -4.8rem;
    left: -2.8rem;
    width: 13rem;
    height: 13rem;
    border-radius: 50%;
    background: rgba(255, 255, 255, 0.13);
    pointer-events: none;
  }
  .home-hero h1 {
    margin: 0 auto 0.85rem;
    max-width: 760px;
    text-shadow: 0 2px 10px rgba(0, 0, 0, 0.18);
    position: relative;
    z-index: 1;
  }
  .hero-lead {
    margin: 0 auto 1.35rem;
    max-width: 700px;
    font-size: 1.02rem;
    position: relative;
    z-index: 1;
  }
  .hero-trust {
    list-style: none;
    margin: 0 auto 1.45rem;
    padding: 0;
    display: flex;
    flex-wrap: wrap;
    justify-content: center;
    gap: 0.55rem;
    position: relative;
    z-index: 1;
  }
  .hero-trust li {
    border-radius: 999px;
    border: 1px solid rgba(255, 255, 255, 0.5);
    background: rgba(255, 255, 255, 0.16);
    padding: 0.32rem 0.85rem;
    font-size: 0.8rem;
    font-weight: 700;
  }
  .index-section {
    margin-bottom: 3rem;
  }
  .articles-section {
    margin-bottom: 2rem;
  }
  .search-box {
    max-width: 540px;
    margin: 0 auto;
    position: relative;
    z-index: 1;
  }
  .search-icon {
    position: absolute;
    left: 1rem;
    top: 50%;
    transform: translateY(-50%);
    color: #9ca3af;
    pointer-events: none;
  }
  #area-search {
    width: 100%;
    padding: 0.9rem 1rem 0.9rem 2.8rem;
    border: none;
    border-radius: 100px;
    font-size: 1rem;
    font-family: inherit;
    box-shadow: 0 10px 28px rgba(0, 0, 0, 0.22);
    outline: none;
    transition: box-shadow 0.2s ease, transform 0.2s ease;
  }
  #area-search:focus {
    box-shadow: 0 12px 28px rgba(0, 0, 0, 0.27);
    transform: translateY(-1px);
  }
  #area-search::placeholder {
    color: #9ca3af;
  }
  .area-grid {
    display: flex;
    flex-wrap: wrap;
    gap: 0.7rem;
  }
  .area-chip {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    background: linear-gradient(145deg, #ffffff 0%, #f4faf5 100%);
    border: 1px solid #dbe7de;
    color: var(--color-text);
    padding: 0.52rem 1.16rem;
    border-radius: 100px;
    font-size: 0.88rem;
    font-weight: 600;
    text-decoration: none;
    transition: transform 0.2s ease, box-shadow 0.2s ease, border-color 0.2s ease;
    box-shadow: 0 4px 11px rgba(15, 23, 42, 0.06);
  }
  .area-chip:hover {
    background: linear-gradient(145deg, var(--color-primary-light) 0%, #f6fbf7 100%);
    border-color: rgba(var(--color-primary-rgb), 0.45);
    color: var(--color-primary-dark);
    text-decoration: none;
    transform: translateY(-2px);
    box-shadow: 0 10px 20px rgba(var(--color-primary-rgb), 0.15);
  }
  .area-chip.hidden {
    display: none;
  }
  .no-results {
    color: var(--color-text-muted);
    font-size: 0.9rem;
    padding: 1rem 0 0.4rem;
  }
  .area-help {
    text-align: center;
    margin-top: 1.5rem;
  }
  .area-help p {
    font-size: 0.9rem;
    color: var(--color-text-light);
    margin: 0;
  }
  .article-card {
    border: 1px solid #e3ebe5;
    box-shadow: 0 6px 14px rgba(15, 23, 42, 0.07);
    transition: transform 0.24s ease, box-shadow 0.24s ease, border-color 0.24s ease;
  }
  .article-card:hover {
    transform: translateY(-5px);
    border-color: rgba(var(--color-primary-rgb), 0.42);
    box-shadow: 0 18px 30px rgba(15, 23, 42, 0.13);
  }
  .article-card .card-thumb {
    height: 172px;
  }
  .article-card .card-body {
    background: linear-gradient(180deg, #fff 0%, #f9fbf9 100%);
  }
  .article-card .card-category {
    background: linear-gradient(135deg, var(--color-primary-light) 0%, #d9f0dc 100%);
  }
  @media (max-width: 768px) {
    .home-hero {
      margin: -0.75rem -1rem 2rem;
      padding: 2.6rem 1rem 2.2rem;
      border-radius: 0 0 24px 24px;
    }
    .hero-lead {
      margin-bottom: 1.2rem;
      font-size: 0.96rem;
    }
    .hero-trust {
      gap: 0.45rem;
      margin-bottom: 1.25rem;
    }
    .hero-trust li {
      font-size: 0.74rem;
      padding: 0.28rem 0.7rem;
    }
    .article-card .card-thumb {
      height: 150px;
    }
  }
  @media (max-width: 480px) {
    .home-hero {
      margin: -0.7rem -1rem 1.75rem;
      padding: 2.15rem 1rem 1.95rem;
    }
    .hero-trust {
      justify-content: flex-start;
    }
    .article-card .card-thumb {
      height: 130px;
    }
  }
</style>

<script>
  const input = document.getElementById('area-search') as HTMLInputElement;
  const chips = Array.from(document.querySelectorAll<HTMLAnchorElement>('.area-chip'));
  const noResults = document.getElementById('no-results');

  const getVisibleChips = () => chips.filter((chip) => !chip.classList.contains('hidden'));

  const moveToArea = (chip: HTMLAnchorElement) => {
    const href = chip.getAttribute('href');
    if (href) {
      window.location.href = href;
    }
  };

  input?.addEventListener('input', () => {
    const query = input.value.trim().toLowerCase();
    let visible = 0;
    chips.forEach((chip) => {
      const areaName = chip.getAttribute('data-area') || '';
      if (!query || areaName.toLowerCase().includes(query)) {
        chip.classList.remove('hidden');
        visible++;
      } else {
        chip.classList.add('hidden');
      }
    });
    if (noResults) {
      noResults.style.display = (query && visible === 0) ? 'block' : 'none';
    }
  });

  input?.addEventListener('keydown', (event) => {
    if (event.key !== 'Enter') return;
    const visibleChips = getVisibleChips();
    if (visibleChips.length === 0) return;

    const activeElement = document.activeElement;
    if (
      activeElement instanceof HTMLAnchorElement &&
      activeElement.classList.contains('area-chip') &&
      !activeElement.classList.contains('hidden')
    ) {
      event.preventDefault();
      moveToArea(activeElement);
      return;
    }

    event.preventDefault();
    moveToArea(visibleChips[0]);
  });
</script>
