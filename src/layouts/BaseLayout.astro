---
interface Props {
  title: string;
  description: string;
  noindex?: boolean;
  breadcrumbs?: { label: string; href?: string }[];
  category?: string;
  publishedAt?: string;
  ogImage?: string;
}
const { title, description, noindex = false, breadcrumbs, category, publishedAt, ogImage } = Astro.props;
const canonicalURL = new URL(Astro.url.pathname, Astro.site);
const ogImageURL = ogImage ? new URL(ogImage, Astro.site).href : new URL('/ogp.png', Astro.site).href;
---
<!DOCTYPE html>
<html lang="ja">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>{title}</title>
  <meta name="description" content={description} />
  <link rel="canonical" href={canonicalURL} />
  {noindex && <meta name="robots" content="noindex" />}
  <meta property="og:title" content={title} />
  <meta property="og:description" content={description} />
  <meta property="og:type" content="article" />
  <meta property="og:url" content={canonicalURL} />
  <meta property="og:site_name" content="屋根修理えらび" />
  <meta property="og:image" content={ogImageURL} />
  <meta property="og:image:width" content="1200" />
  <meta property="og:image:height" content="630" />
  <meta name="twitter:card" content="summary_large_image" />
  <link rel="icon" type="image/png" href="/favicon.png" />
  <link rel="icon" type="image/x-icon" href="/favicon.ico" />
  <link rel="apple-touch-icon" href="/apple-touch-icon.png" />
  <link rel="sitemap" href="/sitemap-index.xml" />
  <link rel="preconnect" href="https://fonts.googleapis.com" />
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
  <link href="https://fonts.googleapis.com/css2?family=Noto+Sans+JP:wght@400;500;700;800&display=swap" rel="stylesheet" />
  <style is:global>
    @import '../styles/global.css';

    :root {
      --color-primary-rgb: 180, 83, 9;
      --color-primary-soft: #fef3e7;
      --color-accent-soft: #fff4ea;
    }

    body {
      font-family: 'Noto Sans JP', var(--font-sans);
      background:
        radial-gradient(circle at 100% -5%, rgba(var(--color-primary-rgb), 0.11) 0%, transparent 40%),
        radial-gradient(circle at -5% 0%, rgba(255, 107, 53, 0.08) 0%, transparent 34%),
        var(--color-bg-warm);
    }

    .site-main {
      padding-top: 1rem;
      padding-bottom: 2rem;
    }

    .article-wrapper h2 {
      font-size: clamp(1.26rem, 2.2vw, 1.58rem);
      margin: 2.6rem 0 1.05rem;
      padding: 0.65rem 0 0.68rem 0.9rem;
      border-left: 4px solid var(--color-primary);
      border-bottom: 2px solid rgba(var(--color-primary-rgb), 0.22);
      border-radius: 0 10px 10px 0;
      background: linear-gradient(90deg, var(--color-primary-soft) 0%, rgba(255, 255, 255, 0.96) 90%);
    }

    .article-wrapper h3 {
      position: relative;
      margin: 2.1rem 0 0.8rem;
      padding: 0 0 0.45rem 1rem;
      border-bottom: 1px dashed #b7c5b9;
      font-size: clamp(1.06rem, 1.8vw, 1.2rem);
    }

    .article-wrapper h3::before {
      content: '';
      position: absolute;
      left: 0.12rem;
      top: 0.48rem;
      width: 0.48rem;
      height: 0.48rem;
      border-radius: 999px;
      background: var(--color-primary);
      box-shadow: 0 0 0 4px rgba(var(--color-primary-rgb), 0.15);
    }

    .article-wrapper .cta-box {
      border: 1px solid #ffd2bd;
      border-radius: calc(var(--radius-lg) + 2px);
      background: linear-gradient(150deg, var(--color-accent-soft) 0%, #ffffff 55%, var(--color-primary-soft) 125%);
      box-shadow: 0 14px 28px rgba(17, 24, 39, 0.08);
      padding: 1.9rem 1.55rem 1.6rem;
    }

    .article-wrapper .cta-box::before {
      height: 5px;
      background: linear-gradient(90deg, #ff7a45 0%, var(--color-primary) 100%);
    }

    .article-wrapper .cta-box h3 {
      margin: 0 0 0.6rem;
      padding: 0;
      border: 0;
      font-size: 1.2rem;
    }

    .article-wrapper .cta-box h3::before {
      content: none;
    }

    .article-wrapper .cta-badge {
      background: linear-gradient(135deg, var(--color-primary), var(--color-primary-dark));
      letter-spacing: 0.04em;
    }

    .article-wrapper .cta-button {
      display: inline-flex;
      align-items: center;
      justify-content: center;
      gap: 0.45rem;
      min-height: 48px;
      padding: 0.85rem 1.85rem;
      border-radius: 999px;
      background: linear-gradient(135deg, #ff7e33 0%, #ff5a1f 100%);
      box-shadow: 0 8px 20px rgba(255, 90, 31, 0.32);
      transition: transform 0.2s ease, box-shadow 0.2s ease;
    }

    .article-wrapper .cta-button::after {
      content: '→';
      transition: transform 0.2s ease;
    }

    .article-wrapper .cta-button:hover {
      transform: translateY(-2px);
      box-shadow: 0 12px 24px rgba(255, 90, 31, 0.4);
    }

    .article-wrapper .cta-button:hover::after {
      transform: translateX(3px);
    }

    .article-wrapper ul {
      list-style: none;
      margin: 0.85rem 0 1.35rem;
      padding-left: 0;
    }

    .article-wrapper ul li {
      position: relative;
      margin-bottom: 0.55rem;
      padding-left: 1.55rem;
    }

    .article-wrapper ul li::before {
      content: '';
      position: absolute;
      left: 0.22rem;
      top: 0.34rem;
      width: 0.4rem;
      height: 0.78rem;
      border-right: 2px solid var(--color-primary);
      border-bottom: 2px solid var(--color-primary);
      transform: rotate(40deg);
    }

    .article-wrapper ol li {
      margin-bottom: 0.55rem;
    }

    .article-wrapper .table-responsive {
      margin: 1.3rem 0;
      border-radius: var(--radius-md);
      overflow-x: auto;
      -webkit-overflow-scrolling: touch;
      box-shadow: var(--shadow-sm);
    }

    .article-wrapper .table-responsive table {
      margin: 0;
      min-width: 640px;
      border: 1px solid var(--color-border);
      border-radius: var(--radius-md);
      overflow: hidden;
      background: #fff;
    }

    .article-wrapper table th,
    .article-wrapper table td {
      padding: 0.8rem 0.95rem;
      border-right: 1px solid var(--color-border-light);
      border-bottom: 1px solid var(--color-border-light);
      vertical-align: top;
    }

    .article-wrapper table th:last-child,
    .article-wrapper table td:last-child {
      border-right: none;
    }

    .article-wrapper table thead th {
      background: linear-gradient(135deg, var(--color-primary) 0%, var(--color-primary-dark) 100%);
      color: #fff;
      font-weight: 700;
      font-size: 0.84rem;
      white-space: nowrap;
    }

    .article-wrapper table tbody tr:nth-child(even) td {
      background: #f8fcf8;
    }

    .article-wrapper table tbody tr:hover td {
      background: #f2f8f3;
    }

    .article-wrapper table :is(th, td)[align='right'],
    .article-wrapper table :is(th, td)[style*='text-align: right'] {
      text-align: right;
    }

    .article-wrapper .point-box,
    .article-wrapper .warning-box {
      position: relative;
      margin: 1.5rem 0;
      padding: 1rem 1.15rem 1rem 3rem;
      border-radius: var(--radius-md);
      border: 1px solid transparent;
    }

    .article-wrapper .point-box {
      background: #ecf5ff;
      border-color: #bfdbfe;
    }

    .article-wrapper .warning-box {
      background: #fff9dd;
      border-color: #facc15;
    }

    .article-wrapper .point-box::before,
    .article-wrapper .warning-box::before {
      position: absolute;
      left: 1rem;
      top: 0.92rem;
      width: 1.35rem;
      height: 1.35rem;
      border-radius: 999px;
      display: flex;
      align-items: center;
      justify-content: center;
      font-weight: 800;
      color: #fff;
    }

    .article-wrapper .point-box::before {
      content: 'i';
      background: #2563eb;
    }

    .article-wrapper .warning-box::before {
      content: '!';
      background: #ca8a04;
    }

    .article-wrapper :is(.point-box, .warning-box) p:last-child {
      margin-bottom: 0;
    }

    @media (max-width: 768px) {
      .header-inner {
        height: auto;
        min-height: 60px;
      }

      .site-main {
        padding-top: 0.75rem;
        padding-bottom: 1.5rem;
      }

      .article-wrapper h2 {
        margin-top: 2.2rem;
        font-size: 1.2rem;
      }

      .article-wrapper .cta-box {
        padding: 1.35rem 1rem;
      }

      .article-wrapper .cta-button {
        width: 100%;
      }

      .article-wrapper .table-responsive table {
        min-width: 560px;
      }
    }
  </style>
</head>
<body>
  <header class="site-header">
    <div class="header-inner">
      <a href="/" class="site-logo">
        <span class="logo-icon">屋</span>
        屋根修理えらび
      </a>
      <nav>
        <ul class="header-nav">
          <li><a href="/#area">地域から探す</a></li>
          <li><a href="/#articles">記事一覧</a></li>
        </ul>
      </nav>
    </div>
  </header>

  <main class="container site-main">
    {breadcrumbs && (
      <nav aria-label="パンくずリスト">
        <ol class="breadcrumb">
          <li><a href="/">トップ</a><span class="separator">&gt;</span></li>
          {breadcrumbs.map((crumb, i) => (
            <li>
              {crumb.href
                ? <><a href={crumb.href}>{crumb.label}</a><span class="separator">&gt;</span></>
                : <span>{crumb.label}</span>
              }
            </li>
          ))}
        </ol>
      </nav>
    )}

    <div class="pr-notice">本記事にはアフィリエイト広告が含まれます</div>

    <slot />
  </main>

  <footer class="site-footer">
    <div class="footer-inner">
      <div>
        <div class="footer-brand">屋根修理えらび</div>
        <p class="footer-desc">
          屋根修理・雨漏り修理の費用を比較して<br />
          あなたにぴったりのサービスを見つけるお手伝いをします。
        </p>
      </div>
      <div>
        <div class="footer-heading">カテゴリ</div>
        <ul class="footer-links">
          <li><a href="/#area">地域から探す</a></li>
          <li><a href="/#articles">新着記事</a></li>
        </ul>
      </div>
      <div>
        <div class="footer-heading">サイトについて</div>
        <ul class="footer-links">
          <li><a href="/privacy/">プライバシーポリシー</a></li>
        </ul>
      </div>
    </div>
    <div class="footer-bottom">
      &copy; {new Date().getFullYear()} 屋根修理えらび All rights reserved.
    </div>
  </footer>
  <script>
    const contentTables = document.querySelectorAll('.article-wrapper table');
    contentTables.forEach((table) => {
      const parent = table.parentElement;
      if (!parent || parent.classList.contains('table-responsive')) return;

      const wrapper = document.createElement('div');
      wrapper.className = 'table-responsive';
      parent.insertBefore(wrapper, table);
      wrapper.appendChild(table);
    });

    const articleWrapper = document.querySelector('.article-wrapper');
    const middleTemplate = document.getElementById('affiliate-middle-template');

    if (articleWrapper && middleTemplate instanceof HTMLTemplateElement) {
      const h2Elements = articleWrapper.querySelectorAll('h2');
      const alreadyInserted = articleWrapper.querySelector('[data-affiliate-middle="inserted"]');

      if (h2Elements.length >= 2 && !alreadyInserted) {
        const middleCta = middleTemplate.content.firstElementChild?.cloneNode(true);
        if (middleCta instanceof HTMLElement) {
          middleCta.setAttribute('data-affiliate-middle', 'inserted');
          h2Elements[1].insertAdjacentElement('afterend', middleCta);
        }
      }
    }
  </script>
</body>
</html>
